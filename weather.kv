#:import brain functions.brain
#:import webbrowser webbrowser

#:set MenuButtonNormal 'Images/Buttons/Button_onNormal.png'
#:set MenuButtonDown 'Images/Buttons/Button_onDown.png'
#:set TextInputNormal 'Images/TextInput/Text_normal.png'
#:set TextInputActive 'Images/TextInput/Text_active.png'

#Custom Widgets
#Unit toggleswitch
<ToggleImageButton@ToggleButtonBehavior+Image>:
    source_on: ''
    source_off: ''
    source: self.source_on if self.state == 'down' else self.source_off
    allow_stretch: True
    allow_no_selection: False
    size_hint: None, None
    size: dp(100), dp(100)
<UnitsButton>:
    button1: SI_setting
    button2: NU_setting
    button3: mmHg_setting

    GridLayout:
        cols: 3
        height: dp(120)
        size_hint_y: None
        spacing_horizontal: dp(20)
        ToggleImageButton:
            id: SI_setting
            group: 'Units'
            source_on: 'Images/Buttons/ToggleButton_active_SI.png'
            source_off: 'Images/Buttons/ToggleButton_normal_SI.png'
            on_state: root.on_state(0)

        ToggleImageButton:
            id: NU_setting
            group: 'Units'
            source_on: 'Images/Buttons/ToggleButton_active_NU.png'
            source_off: 'Images/Buttons/ToggleButton_normal_NU.png'
            on_state: root.on_state(1)
            
        ToggleImageButton:
            id: mmHg_setting
            group: 'Units'
            source_on: 'Images/Buttons/ToggleButton_active_Ast.png'
            source_off: 'Images/Buttons/ToggleButton_normal_Ast.png'
            on_state: root.on_state(2)

#Main Screen
<MainScreen>:
#Adding menu bar for settings and refresh/API call
    BoxLayout:
        orientation: 'vertical'
        id: main_layout
        background_path: root.background_img
        canvas.before:
            Color:
                rgb: (.2,.2,.2)
            Rectangle:
                #source: self.background_path
                size: (self.width * 16/9, self.height)
                pos: self.pos
        GridLayout:
            cols: 2
            height: dp(self.minimum_height)
            size_hint_y: None
        
            Button:
                font_size: dp(15)
                text: 'Settings'
                size_hint_y: None
                height: dp(self.texture_size[1])
                width: dp(self.texture_size[0])
                border: (0,0,0,0)
                on_release: 
                    root.manager.current = 'settings'
                    root.manager.transition.direction = 'right'
                background_normal: MenuButtonNormal
                background_down: MenuButtonDown
            Button:
                id: Refresh
                font_size: dp(15)
                text: 'Update'
                size_hint_y: None
                height: dp(self.texture_size[1])
                border: (0,0,0,0)
                background_normal: MenuButtonNormal
                background_down: MenuButtonDown
                on_release: 
                    root.load_settings()
                    brain.request(root.city, root.API)
                    root.update_current()
                    root.update_future()

#True main screen: First: Current weather; Second: Forecast
        Carousel:
            direction: 'right'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint_x: 1
                GridLayout:
                    cols: 2
                    size_hint: (None,None)
                    height: dp(self.minimum_height)
                    padding: [dp(self.parent.center_x*2/8), 0, dp(self.center_x/2),0]
                    
#Location/Time
                    Widget:
                        height: dp(1)
                        size_hint_y: None
                    Widget:
                        height: dp(1)
                        size_hint_y: None
                    Label:
                        text: root.loc
                        font_size: dp(20)
                        size_hint: (None, None)
                        halign: 'center'
                        valign: 'top'
                        pos: dp(self.width * 0), dp(self.height)
                        size: dp(100), dp(55)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        
                    Label:
                        text: root.time
                        font_size: dp(15)
                        size_hint: (None, None)
                        halign: 'center'
                        valign: 'bottom'
                        pos: dp(self.width * 0), dp(self.height)
                        size: dp(100), dp(55)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: self.size
                                pos: self.pos

#Weather icon
                    Image:
                        id: Icon
                        source: root.weather_icon
                        size_hint: (None, None)
                        size: dp(100), dp(100)
                        pos_hint: {'x': 0.5, 'y': .5}
                        fit_mode: 'contain'
                        
                    Label:
                        text: root.overall
                        font_size: dp(15)
                        size_hint: (None, None)
                        halign: 'center'
                        valign: 'center'
                        size: dp(100), dp(100)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: self.size
                                pos: self.pos

#Current temperature
                    FloatLayout:
                        size_hint: (None, None)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: (self.size[0]*2, self.size[1])
                                pos: self.pos
                        Image:
                            source: 'Images/Icons/Thermometer.png'
                            size_hint: (None, None)
                            size: dp(50), dp(50)
                            allow_stretch: True
                            pos_hint: {'center_x': 1, 'center_y': .5}

                    Label:
                        text: root.temp
                        font_size: dp(20)
                        size_hint_x: None
                        size_hint_y: None
                        halign: 'left'
                        valign: 'center'
                        size: dp(100), dp(55)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                    
#Min/Max Temperature
                    FloatLayout:
                        size_hint: (None, None)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: (self.size[0]*2, self.size[1])
                                pos: self.pos
                        Image:
                            source: 'Images/Icons/DayNight.png'
                            size_hint: (None, None)
                            size: dp(50), dp(50)
                            allow_stretch: True
                            pos_hint: {'center_x': 1, 'center_y': .5}
                    Label:
                        text: root.temp_min + '\n' + root.temp_max
                        font_size: dp(15)
                        size_hint_x: None
                        size_hint_y: None
                        height: dp(self.parent.children[0].height)
                        halign: 'left'
                        valign: 'center'
                        size: dp(100), dp(55)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: self.size
                                pos: self.pos
#Humidity           
                    FloatLayout:
                        size_hint: (None, None)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: (self.size[0]*2, self.size[1])
                                pos: self.pos
                        Image:
                            source: 'Images/Icons/Humidity.png'
                            size_hint: (None, None)
                            size: dp(50), dp(50)
                            allow_stretch: True
                            pos_hint: {'center_x': 1, 'center_y': .5}
                    Label:
                        text: root.hum
                        font_size: dp(15)
                        text_size: self.size
                        size_hint_x: None
                        size_hint_y: None
                        height: dp(self.parent.children[0].height)
                        halign: 'center'
                        valign: 'middle'
                        size: dp(100), dp(55)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: self.size
                                pos: self.pos
#Percentage overcast
                    FloatLayout:
                        size_hint: (None, None)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: (self.size[0]*2, self.size[1])
                                pos: self.pos
                        Image:
                            source: 'Images/Icons/Clouds.png'
                            size_hint: (None, None)
                            size: dp(50), dp(50)
                            allow_stretch: True
                            pos_hint: {'center_x': 1, 'center_y': .5}
                    Label:
                        text: root.overcast
                        font_size: dp(15)
                        size_hint_x: None
                        size_hint_y: None
                        height: dp(self.parent.children[0].height)
                        halign: 'center'
                        valign: 'center'
                        size: dp(100), dp(55)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: self.size
                                pos: self.pos
#Wind 
                    FloatLayout:
                        size_hint: (None, None)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: (self.size[0]*2, self.size[1])
                                pos: self.pos
                        Image:
                            source: 'Images/Icons/Wind.png'
                            size_hint: (None, None)
                            size: dp(50), dp(50)
                            allow_stretch: True
                            pos_hint: {'center_x': 1, 'center_y': .5}
                    Label:
                        markup: True
                        text: root.wind
                        font_size: dp(15)
                        size_hint_x: None
                        size_hint_y: None
                        height: self.parent.children[0].height
                        halign: 'center'
                        valign: 'center'
                        size: dp(100), dp(55)
                        canvas.before:
                            Color: 
                                rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: self.size
                                pos: self.pos
#Forecast
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Five day forecast'
                    size: dp(25), dp(100)
                    font_size: dp(25)
                    size_hint: (.7, .1)
                    pos: (self.width, self.height)
                    canvas.before:
                        Color: 
                            rgba: (.1,.1,.1,.4)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    size_hint: (1, 1)

                    BoxLayout:
                        orientation: 'vertical'
                        ScrollView:
                            do_scroll_x: True
                            do_scroll_y: True
                            scroll_x: .4
                            scroll_y: .65
                            Image:
                                id: ForeCast
                                source: root.future_image
                                size_hint_x: None
                                size_hint_y: None
                                size: dp(self.texture_size[0]), dp(self.texture_size[1])
                                pos: self.pos
                            

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        minimum_height: self.minimum_height
        canvas.before:
            Color:
                rgb: (.2,.2,.2)
            Rectangle:
                #source: 'Images/Background/settings.png'
                size: (self.width * 16/9, self.height)
                pos: (self.pos[0]/2, self.pos[1])
        Button:
            font_size: dp(15)
            text: 'Return'
            size_hint_y: None
            height: dp(self.texture_size[1])
            border: (0,0,0,0)
            background_normal: MenuButtonNormal
            background_down: MenuButtonDown
            on_release: 
                root.manager.current = 'main'
                root.manager.transition.direction = 'left'
        GridLayout:
            cols: 1
            rows: 4
            size_hint: (.9,None)
            height: self.minimum_height
            padding: [dp(10), dp(10), dp(10), 0]
            spacing_vertical: dp(20)
            row_default_height: dp(40)
            TextInput:
                id: city_field
                hint_text: 'City'
                on_text_validate: root.update_city(self.text)
                background_normal: TextInputNormal
                background_active: TextInputActive
                foreground_color: (1,1,1,1)
                multiline: False
                font_size: dp(25)
                size_hint_y: None
                height: dp(40)
            Label:
                text: 'API key:'
                hint_text: 'Your API key'
                size_hint_y: None
                font_size: dp(15)
                valign: 'bottom'
                height: self.font_size
                halign: 'left'
            TextInput:
                id: API_field
                foreground_color: (1,1,1,1)
                text: 'Enter your API key'
                on_text_validate: root.update_API(self.text)
                background_normal: TextInputNormal
                background_active: TextInputActive
                multiline: False
                font_size: dp(25)
                size_hint_y: None
                height: dp(40)  
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                heigth: dp(40)
                canvas.before:
                    Color: 
                        rgba: (.7,.7,.7,.4)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    markup: True
                    text: 'Weather data provided by [u][ref=link]OpenWeather[/ref][/u]'
                    font_size: dp(15)
                    height: dp(40)
                    width: dp(40)
                    halign: 'left'
                    size_hint: .5, None
                    multiline: False
                    on_ref_press:
                        webbrowser.open('https://openweathermap.org/')
                Image:
                    source: 'Images/Icons/OpenWeather-Master-Logo RGB.png'
                    allow_stretch: True
                    height: dp(50)
                    keep_ratio: True
                    size_hint: .3, None      
        UnitsButton:
            id: unit_select
            size_hint_y: None
            height: dp(100)

        Widget:
            height: dp(40)